{% if settings.sns.settings.facebook == false or settings.sns.settings.facebook == 'false' %}
  .c-product_info__share .u-icon--facebook {
    display: none
  }
{% endif %}
{% if settings.sns.settings.twitter == false or settings.sns.settings.twitter == 'false' %}
  .c-product_info__share .u-icon--twitter {
    display: none
  }
{% endif %}
{% if settings.sns.settings.line == false or settings.sns.settings.line == 'false' %}
  .c-product_info__share .u-icon--line {
    display: none
  }
{% endif %}
{% if (settings.sns.settings.facebook == false or settings.sns.settings.facebook == 'false') and (settings.sns.settings.twitter == false or settings.sns.settings.twitter == 'false') and (settings.sns.settings.line == false or settings.sns.settings.line == 'false') %}
  .c-product_info__share .c-product_info__share__label {
    display: none;
  }
{% endif %}
{% if settings.icon.settings.favorite_icon == false or settings.icon.settings.favorite_icon == 'false' %}
  .c-product_item__actions .c-product_item__form--favorite {
    display: none;
  }
{% else %}
  .c-product_item__actions .c-product_item__form--favorite {
    display: inline-block;
  }
{% endif %}
{% if settings.icon.settings.cart_icon == false or settings.icon.settings.cart_icon == 'false' %}
  .c-product_item__actions .c-product_item__form--cart {
    display: none;
  }
{% else %}
  .c-product_item__actions .c-product_item__form--cart {
    display: inline-block;
  }
{% endif %}
{% if settings.icon.settings.favorite_icon == false or settings.icon.settings.favorite_icon == 'false' and settings.icon.settings.cart_icon == false or settings.icon.settings.cart_icon == 'false' %}
  .c-product_item .c-product_item__inner__content {
    margin-top: 0;
  }
{% endif %}

