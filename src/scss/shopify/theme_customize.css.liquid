/*================ Headings ================*/
h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6 {
  font-family: "{{settings.font.settings.title_fontfamily}}", serif;
}

/*================ Variables ================*/
:root {
  --color-text-head: {{settings.color.settings.color_head_text}};
  --color-text-body: {{settings.color.settings.color_body_text}};
  --color-text-overlay: {{settings.color.settings.color_overlay_text}};
  --color-text-link: {{settings.color.settings.color_btn_bg}};
  --color-btn-bg: {{settings.color.settings.color_btn_bg}};
  --color-btn-text: {{settings.color.settings.color_btn_text}};
  --color-input-text: {{settings.color.settings.color_input_text}};
  --color-input-border: {{settings.color.settings.color_input_border}};
  --color-page-bg: {{settings.color.settings.color_all_bg}};
  --color-page-border: {{settings.color.settings.color_main_border}};
  --color-page-accent: {{settings.color.settings.color_btn_bg}};

  --font-size-text-head: {{settings.font.settings.font_head}}px;
  --font-size-text-subhead: {{settings.font.settings.font_subhead}}px;
  --font-size-text-body: {{settings.font.settings.font_body}}px;
  --font-size-text-link: {{settings.font.settings.font_body}}px;
}

.c-steps_to_order--theme {
  --theme-color: var(--color-btn-bg) !important;
  --text-color: var(--color-btn-text) !important;
}

